#:import webbrowser webbrowser
#:import utils kivy.utils

<MenuScreen>:
	canvas.before:
        Color:
            rgb: utils.get_color_from_hex('#FFE4E1')
        Rectangle:
            pos: self.pos
            size: self.size
	MDFillRoundFlatIconButton:
		size_hint: .5,None
		pos_hint : {"center_x":.5,"center_y":.6}
		text: 'Start Game'
		icon: "play"
		font_name: "qwe.otf"
		font_size: "40sp"
		md_bg_color: utils.get_color_from_hex('#1A1717')
        on_release: root.manager.current = 'maingameplay'
    MDFillRoundFlatIconButton:
        size_hint: .5,None
		pos_hint : {"center_x":.5,"center_y":.2}
        text: 'Quit Game'
		icon: "exit-to-app"
		font_name: "qwe.otf"
		font_size: "40sp"
		md_bg_color: utils.get_color_from_hex('#1A1717')
		on_release: app.stop()
	MDFillRoundFlatIconButton:
	    id: mmm
    	text:'Music On'
		halign:"right"
		icon:"music"
		size_hint: .5,None
		pos_hint : {"center_x":.5,"center_y":.5}
		font_name: "qwe.otf"
		font_size: "40sp"
		md_bg_color: utils.get_color_from_hex('#1A1717')
    	on_release: root.plays()
    MDFillRoundFlatIconButton:
    	text:'About Us'
		icon:"human-greeting"
		size_hint: .5,None
		pos_hint : {"center_x":.5,"center_y":.4}
		font_name: "qwe.otf"
		font_size: "40sp"
		md_bg_color: utils.get_color_from_hex('#1A1717')
		on_release: webbrowser.open('https://www.instagram.com/rafirachmad/')
	MDFillRoundFlatIconButton:
    	text:'Support Us'
		icon:"hand-heart"
		size_hint: .5,None
		pos_hint : {"center_x":.5,"center_y":.3}
		font_name: "qwe.otf"
		font_size: "40sp"
		md_bg_color: utils.get_color_from_hex('#1A1717')
		on_release: webbrowser.open('https://saweria.co/RRRman')
		
	        
